{
  "name": "audunru/fiken-api-php-client",
  "description": "Connect to the Fiken API",
  "keywords": [
    "fiken"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Audun Rundberg",
      "email": "audun@rundberg.no"
    }
  ],
  "require": {
    "php": "^7.3",
    "guzzlehttp/guzzle": "^6.3",
    "illuminate/database": "^6.0|^7.0|^8.0",
    "illuminate/support": "^6.0|^7.0|^8.0"
  },
  "require-dev": {
    "dms/phpunit-arraysubset-asserts": "^0.1.0",
    "mikey179/vfsstream": "^1.6",
    "php-coveralls/php-coveralls": "^2.2",
    "phpunit/phpunit": "^8.5",
    "symfony/dotenv": "^5.0"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "audunru\\FikenClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "audunru\\FikenClient\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env.testing') || copy('.env.example', '.env.testing');\""
    ],
    "test": [
      "vendor/bin/phpunit"
    ],
    "test-with-coverage": [
      "vendor/bin/phpunit --coverage-clover build/logs/clover.xml"
    ]
  }
}
